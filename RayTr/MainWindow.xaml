<Window x:Class="RayTr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ray Tracer" Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="Сфера 1" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр X"/>
                            <TextBox x:Name="Sphere1X" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр Y"/>
                            <TextBox x:Name="Sphere1Y" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр Z"/>
                            <TextBox x:Name="Sphere1Z" Text="5" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Радиус"/>
                            <TextBox x:Name="Sphere1Radius" Text="1,0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет R"/>
                            <TextBox x:Name="Sphere1R" Text="0,8" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет G"/>
                            <TextBox x:Name="Sphere1G" Text="0,2" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет B"/>
                            <TextBox x:Name="Sphere1B" Text="0,2" Width="60" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Сфера 2" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр X"/>
                            <TextBox x:Name="Sphere2X" Text="1,5" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр Y"/>
                            <TextBox x:Name="Sphere2Y" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Центр Z"/>
                            <TextBox x:Name="Sphere2Z" Text="6" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Радиус"/>
                            <TextBox x:Name="Sphere2Radius" Text="1,0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет R"/>
                            <TextBox x:Name="Sphere2R" Text="0,2" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет G"/>
                            <TextBox x:Name="Sphere2G" Text="0,8" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Цвет B"/>
                            <TextBox x:Name="Sphere2B" Text="0,2" Width="60" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Источник света" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция X"/>
                            <TextBox x:Name="LightX" Text="2" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция Y"/>
                            <TextBox x:Name="LightY" Text="2" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция Z"/>
                            <TextBox x:Name="LightZ" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Камера" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция X"/>
                            <TextBox x:Name="CameraX" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция Y"/>
                            <TextBox x:Name="CameraY" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Позиция Z"/>
                            <TextBox x:Name="CameraZ" Text="0" Width="60" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RenderButton" Content="Рендеринг" Click="RenderButton_Click" 
                            Padding="15,5" FontSize="14" Margin="5"/>
                    <Button x:Name="SaveButton" Content="Сохранить PNG" Click="SaveButton_Click" 
                            Padding="15,5" FontSize="14" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Image x:Name="RenderImage" Grid.Row="1" Margin="10" Stretch="Uniform"/>
    </Grid>
</Window>